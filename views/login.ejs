    <link rel="stylesheet" href="./static/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="../static/css/reg.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
